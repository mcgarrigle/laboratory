
domain "foo.local"

subnet { |s|
  s.name "management"
  s.ip4 "10.0.30.0/24"

  s.guest do |g|
    g.name = "foreman"
    g.interface {|i| i.ip4 = "10.0.30.10/24"; i.gateway4 = "10.0.30.1" }
    g.interface {|i| i.ip4 = "10.0.5.10/24" }
    g.disk {|d| d.device = "sda"; d.size = 200000 }
  end

  s.guest do |g|
    g.name = "ipa"
  end

  s.guest do |g|
    g.name = "guest1"
  end

  s.guest {
  }

}
