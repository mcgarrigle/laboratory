
domain "foo.local"

subnet { |s|
  s.name = "management"
  s.ip4 = "10.0.30.0/24"

  s.guest do |g|
    g.name = "theforeman"
    g.interface do |i| 
      i.network = :intnet
      i.ip4 = "10.0.30.10/24"
    end
    g.interface do |i|
      i.network = :nat
      i.port_forward = "guestssh,tcp,,2222,,22"
    end
    g.boot = [:dvd, :disk]
    g.dvd  {|d| d.medium = "../Downloads/CentOS-7-x86_64-Minimal-1511.iso"}
    g.disk {|d| d.size = 32768 }
  end

}
