  lab.name = "ipa"
  lab.ip4 = "10.0.30.0/24"

  #network :public do
  #end

  #network :private do
  #end

  lab.guest do |g|
    g.name   = "server"
    g.memory = 1024
    g.boot   = [:dvd, :disk]
    g.interface do |i| 
      i.network = :intnet
      i.ip4 = "10.0.30.11/24"
    end
    g.interface do |i| 
      i.network = :bridged
      i.ip4 = "10.0.40.11/24"
