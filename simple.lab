#!/usr/bin/env lab

ISO = "../Downloads/centos-gold-7.3.1611.iso"

domain "foo.local"

laboratory "simple" do |lab|
  lab.ip4 = "10.0.30.0/24"

  lab.guest "server" do |g|
    g.memory = 1024
    g.boot   = [:dvd, :disk]
    g.interface do |i| 
      i.network = :vlan130
      i.ip4 = "10.0.30.10/24"
    end
    g.interface do |i|
      i.network = :nat
      i.forward("ssh",   ":3022" => ":22")
      i.forward("http",  ":3080" => ":80")
      i.forward("https", ":3443" => ":443")
      i.forward("proxy", ":3090" => ":9090")
    end
    g.dvd  {|d| d.medium = ISO  }
    g.disk {|d| d.size = 204800 }
  end

end
