#!/usr/bin/env lab

ISO = "../Downloads/centos-gold-7.3.1611.iso"

domain "foo.local"

laboratory "simple" do |lab|
  lab.ip4 = "10.0.30.0/24"

  lab.guest "server" do |g|
    g.memory = 1024
    g.boot   = [:dvd, :disk]
    g.interface do |i| 
      i.network = :intnet
      i.ip4 = "10.0.30.10/24"
    end
    g.interface do |i|
      i.network = :nat
      i.forward("ssh", from:":3022", to:":22")
      i.forward("http", from:":3080", to:":80")
      i.forward("https", from:":3443", to:":443")
      i.forward("proxy", from:":3090", to:":9090")
    end
    g.dvd  {|d| d.medium = ISO  }
    g.disk {|d| d.size = 204800 }
  end

end
