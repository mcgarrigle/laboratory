#!/usr/bin/env lab

ISO = "../Downloads/centos-gold-7.3.1611.iso"

domain "foo.local"

laboratory "puppet4" do |lab|

  lab.guest "puppet" do |g|
    g.memory = 2048
    g.boot   = [:dvd, :disk]
    g.interface do |i| 
      i.network = :intnet
      i.ip4 = "10.0.30.20/24"
    end
    g.interface do |i|
      i.network = :nat
      i.forward("ssh", ":7022" => ":22")
    end
    g.dvd  {|d| d.medium = ISO  }
    g.disk {|d| d.size = 102400 }
  end

  lab.guest "labrat" do |g|
    g.memory = 2048
    g.boot   = [:dvd, :disk]
    g.interface do |i| 
      i.network = :intnet
      i.ip4 = "10.0.30.21/24"
    end
    g.dvd  {|d| d.medium = ISO  }
    g.disk {|d| d.size = 102400 }
  end

end
