
ISO = "../Downloads/centos-gold-7.3.1611.iso"

domain "foo.local"

laboratory do |lab|
  lab.name = "puppet4"

  lab.guest do |g|
    g.name   = "puppet"
    g.memory = 2048
    g.boot   = [:dvd, :disk]
    g.interface do |i| 
      i.network = :intnet
      i.ip4 = "10.0.30.20/24"
    end
    g.interface do |i|
      i.network = :nat
      i.port_forward = "ssh,tcp,,7022,,22"
    end
    g.dvd  {|d| d.medium = ISO  }
    g.disk {|d| d.size = 102400 }
  end

  lab.guest do |g|
    g.name   = "labrat"
    g.memory = 2048
    g.boot   = [:dvd, :disk]
    g.interface do |i| 
      i.network = :intnet
      i.ip4 = "10.0.30.21/24"
    end
    g.dvd  {|d| d.medium = ISO  }
    g.disk {|d| d.size = 102400 }
  end

end
