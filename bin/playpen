#!/usr/bin/env ruby

$LIB_DIR = File.join(File.dirname(__FILE__), "..", "lib")
$LOAD_PATH << $LIB_DIR 

require "collective"
require "pp"

load "network"

@hypervisor = Hypervisor.new

g = Guest.new
g.name = "foo"
g.dvd {|d| d.medium = "/Users/pete/Downloads/CentOS-7-x86_64-Minimal-1511.iso"}
g.disk {}
g.interface {|i| i.network = :intnet }
g.interface {|i| i.network = :nat    }

pp g

@hypervisor.create(g)
@hypervisor.start(g)
