#!/usr/bin/env lab

ISO = "../Downloads/centos-gold-7.3.1611.iso"

domain "foo.local"

laboratory "project" do |lab|
  lab.ip4 = "10.0.30.0/24"

  lab.network(:management, :hostonly => "10.0.30.0/24")
  lab.network(:cluster,    :intnet   => "10.0.40.0/24")

  lab.guest "cdn" do |g|
    g.enabled = false
    g.memory = 1024
    g.boot   = [:dvd, :disk]
    g.interface do |i| 
      i.network = :intnet
      i.ip4 = "10.0.30.10/24"
    end
    g.dvd  {|d| d.medium = ISO  }
    g.disk {|d| d.size = 102400 }
  end

  lab.guest "ipa" do |g|
    g.memory = 3192
    g.boot   = [:dvd, :disk]
    g.interface do |i| 
      i.network = :intnet
      i.ip4 = "10.0.30.11/24"
    end
    g.interface do |i|
      i.network = :nat
      i.forward("ssh",   ":9022" => ":22")
      i.forward("http",  ":9080" => ":80")
      i.forward("https", ":9443" => ":443")
      i.forward("proxy", ":9090" => ":9090")
    end
    g.dvd  {|d| d.medium = ISO  }
    g.disk {|d| d.size = 204800 }
  end

  lab.guest "foreman" do |g|
    g.memory = 4096
    g.boot   = [:dvd, :disk]
    g.interface do |i| 
      i.network = :intnet
      i.ip4 = "10.0.30.12/24"
    end
    g.dvd  {|d| d.medium = ISO  }
    g.disk {|d| d.size = 102400 }
  end

end
