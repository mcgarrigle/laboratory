#!/usr/bin/env lab

ISO = "../Downloads/centos-gold-7.3.1611.iso"


laboratory "project" do |lab|
  lab.domain = "foo.local"

  lab.network :management, :hostonly => "10.0.30.0/24"
  lab.network :cluster, :natnetwork => "10.0.40.0/24"

  lab.guest "ipa" do |g|
    g.memory = 3192
    g.boot   = [:dvd, :disk]
    g.interface do |i| 
      i.network = :management
      i.ip4 = "10.0.30.11"
    end
    g.interface do |i|
      i.network = :cluster
      i.ip4 = "10.0.40.11"
    end
    g.dvd  {|d| d.medium = ISO  }
    g.disk {|d| d.size = 102400 }
  end

  lab.guest "foreman" do |g|
    g.memory = 4096
    g.boot   = [:dvd, :disk]
    g.interface do |i| 
      i.network = :intnet
      i.ip4 = "10.0.30.10/24"
    end
    g.interface do |i|
      i.network = :cluster
      i.ip4 = "10.0.40.10"
    end
    g.dvd  {|d| d.medium = ISO  }
    g.disk {|d| d.size = 102400 }
  end

end

